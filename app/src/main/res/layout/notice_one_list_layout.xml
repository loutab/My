<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    >
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/head"
        android:src="@mipmap/noticehead"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7c7c7c"
        android:text="国企党建党员"
        android:textSize="15sp"
        android:id="@+id/name"
        android:layout_toRightOf="@id/head"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="9dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="想添加你为好友"
        android:textColor="#414141"
        android:textSize="16sp"
        android:layout_toRightOf="@id/head"
        android:layout_below="@id/name"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="11dp"
        android:id="@+id/step"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#a6a6a6"
        android:text="我是国企党建党员"
        android:textSize="15sp"
        android:id="@+id/content"
        android:layout_toRightOf="@id/head"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="9dp"
        android:layout_below="@id/step"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天 10:55"
        android:textSize="12sp"
        android:textColor="#a6a6a6"
        android:layout_alignParentRight="true"
        android:layout_marginTop="11dp"
        android:layout_marginRight="12dp"
        android:id="@+id/time"
        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="11dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/noaction"
            android:visibility="invisible"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#a6a6a6"
                android:textSize="13sp"
                android:text="阻止此人"
                android:id="@+id/forbid"
                />
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/agree"
                android:id="@+id/agree"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ignore"
                android:id="@+id/ignore"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/action"
            android:orientation="horizontal"
            android:layout_gravity="right|center_vertical"
            >
            <ImageView
                android:id="@+id/actionstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wrong"
                />
            <TextView
                android:id="@+id/actioncontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已忽略"
                android:textSize="15sp"
                android:textColor="#FE473F"
                android:layout_marginLeft="4dp"
                />


        </LinearLayout>

    </FrameLayout>


</RelativeLayout>
